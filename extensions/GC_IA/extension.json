{
    "name": "GC_IA",
    "version": "0.1",
    "author": [
        "Government of Canada",
        "Nick Pietrantonio"
    ],
    "description": "Allows users to add communities of practice to their page",
    "descriptionmsg":"gc_ia-desc",
    "type": "other",
    "MessagesDirs":{
        "GC_IA":[
            "i18n"
        ]
    },
    "ResourceModules":{
        "ext.gc_ia":{
            "group":"ext.gc_ia",
            "scripts":[
                "resources/selectize.js",
                "resources/testing.js"
            ],
            "styles": [
                "resources/selectize.bootstrap3.css"
            ],
            "dependencies":[
                "jquery.client"
            ],
            "position": "top"
            
        }
    },
    "ResourceFileModulePaths":{
        "localBasePath": "",
        "remoteExtPath": "GC_IA"
    },
    "AutoloadClasses":{
        "GC_IA":"GC_IA_body.php"
    },
    "Hooks": {
		"BeforePageDisplay": [
			"GC_IA::loadscripts"
		],
        "EditPage::showEditForm:fields":[
            "GC_IA::audienceField"
        ],
        "PageContentSave": [
            "GC_IA::addAudienceOnSave"
        ]
	},
    "manifest_version": 1
    
}